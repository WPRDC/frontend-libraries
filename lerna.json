{
  "packages": [
    "./packages/**"
  ],
  "ignore": [
    "greenprint"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "independent",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": false
}
